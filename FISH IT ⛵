---------------------------------------
-- MAIN MINIMIZE ANIMATION
---------------------------------------
local mainOpen = true
ToggleMain.MouseButton1Click:Connect(function()
	ClickSound:Play()
	mainOpen = not mainOpen

	local targetSize = mainOpen and UDim2.new(0,270,0,445) or UDim2.new(0,270,0,60)
	TweenService:Create(Main, TweenInfo.new(.28, Enum.EasingStyle.Quad), {Size = targetSize}):Play()
	ToggleMain.Text = mainOpen and "-" or "+"
end)

