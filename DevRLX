----------------------------------------------------
-- PLAYER (UTILITIES)
----------------------------------------------------
do
	local p = Pages.Player

	local function Slider(title, min, max, default, callback)
		local f = Instance.new("Frame", p)
		f.Size = UDim2.new(1,-20,0,60)
		f.BackgroundTransparency = 1

		local t = Instance.new("TextLabel", f)
		t.Size = UDim2.new(1,0,0,20)
		t.BackgroundTransparency = 1
		t.Font = Enum.Font.GothamBold
		t.TextSize = 14
		t.TextColor3 = Color3.fromRGB(255,230,120)
		t.Text = title..": "..default

		local bar = Instance.new("Frame", f)
		bar.Position = UDim2.new(0,0,0,30)
		bar.Size = UDim2.new(1,0,0,10)
		bar.BackgroundColor3 = Color3.fromRGB(60,60,60)
		Instance.new("UICorner", bar).CornerRadius = UDim.new(1,0)

		local fill = Instance.new("Frame", bar)
		fill.Size = UDim2.new((default-min)/(max-min),0,1,0)
		fill.BackgroundColor3 = Color3.fromRGB(255,200,0)
		Instance.new("UICorner", fill).CornerRadius = UDim.new(1,0)

		bar.InputBegan:Connect(function(i)
			if i.UserInputType == Enum.UserInputType.MouseButton1 then
				local conn; conn = UIS.InputChanged:Connect(function(m)
					if m.UserInputType == Enum.UserInputType.MouseMovement then
						local x = math.clamp((m.Position.X - bar.AbsolutePosition.X)/bar.AbsoluteSize.X,0,1)
						fill.Size = UDim2.new(x,0,1,0)
						local val = math.floor(min + (max-min)*x)
						t.Text = title..": "..val
						callback(val)
					end
				end)
				UIS.InputEnded:Once(function() if conn then conn:Disconnect() end end)
			end
		end)
	end

	local hum = function()
		return LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
	end

	Slider("WalkSpeed", 16, 150, 16, function(v) if hum() then hum().WalkSpeed=v end end)
	Slider("JumpPower", 50, 200, 50, function(v) if hum() then hum().JumpPower=v end end)

	local infJump=false
	local btnInf = Instance.new("TextButton", p)
	btnInf.Size = UDim2.new(1,-20,0,40)
	btnInf.Text = "Infinite Jump : OFF"
	btnInf.Font = Enum.Font.GothamBold
	btnInf.TextColor3 = Color3.fromRGB(255,230,120)
	btnInf.BackgroundColor3 = Color3.fromRGB(90,70,20)
	Instance.new("UICorner", btnInf).CornerRadius = UDim.new(0,10)
	btnInf.MouseButton1Click:Connect(function()
		Click()
		infJump = not infJump
		btnInf.Text = "Infinite Jump : "..(infJump and "ON" or "OFF")
	end)
	UIS.JumpRequest:Connect(function()
		if infJump and hum() then hum():ChangeState(Enum.HumanoidStateType.Jumping) end
	end)

	local noclip=false
	local btnNC = Instance.new("TextButton", p)
	btnNC.Size = UDim2.new(1,-20,0,40)
	btnNC.Text = "Noclip : OFF"
	btnNC.Font = Enum.Font.GothamBold
	btnNC.TextColor3 = Color3.fromRGB(255,230,120)
	btnNC.BackgroundColor3 = Color3.fromRGB(90,70,20)
	Instance.new("UICorner", btnNC).CornerRadius = UDim.new(0,10)
	btnNC.MouseButton1Click:Connect(function()
		Click()
		noclip = not noclip
		btnNC.Text = "Noclip : "..(noclip and "ON" or "OFF")
	end)
	RunService.Stepped:Connect(function()
		if noclip and LocalPlayer.Character then
			for _,v in ipairs(LocalPlayer.Character:GetDescendants()) do
				if v:IsA("BasePart") then v.CanCollide=false end
			end
		end
	end)

	local btnRe = Instance.new("TextButton", p)
	btnRe.Size = UDim2.new(1,-20,0,40)
	btnRe.Text = "REJOIN"
	btnRe.Font = Enum.Font.GothamBold
	btnRe.TextColor3 = Color3.fromRGB(255,230,120)
	btnRe.BackgroundColor3 = Color3.fromRGB(70,90,20)
	Instance.new("UICorner", btnRe).CornerRadius = UDim.new(0,10)
	btnRe.MouseButton1Click:Connect(function()
		Click()
		TeleportService:Teleport(game.PlaceId, LocalPlayer)
	end)

	local btnCS = Instance.new("TextButton", p)
	btnCS.Size = UDim2.new(1,-20,0,40)
	btnCS.Text = "CHANGE SERVER"
	btnCS.Font = Enum.Font.GothamBold
	btnCS.TextColor3 = Color3.fromRGB(255,230,120)
	btnCS.BackgroundColor3 = Color3.fromRGB(70,90,20)
	Instance.new("UICorner", btnCS).CornerRadius = UDim.new(0,10)
	btnCS.MouseButton1Click:Connect(function()
		Click()
		TeleportService:TeleportToPlaceInstance(game.PlaceId, game.JobId, LocalPlayer)
	end)
end

