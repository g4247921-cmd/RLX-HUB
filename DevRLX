	for i = 1,25 do
		Logo.ImageTransparency = 1 - (i/25)
		Stroke.Transparency = 1 - (i/25)
		task.wait(0.03)
	end
	task.wait(1)
	for i = 1,25 do
		Logo.ImageTransparency = i/25
		Stroke.Transparency = i/25
		task.wait(0.02)
	end
	Intro:Destroy()
end)

